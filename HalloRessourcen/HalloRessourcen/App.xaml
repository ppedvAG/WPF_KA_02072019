                </ResourceDictionary>

                <ResourceDictionary Source="/MeineRessourcen;component/Dictionary1.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
