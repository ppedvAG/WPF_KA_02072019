             xmlns:local="clr-namespace:HalloRessourcen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary>
                    <SolidColorBrush x:Key="textfarbe" Color="HotPink"/>
